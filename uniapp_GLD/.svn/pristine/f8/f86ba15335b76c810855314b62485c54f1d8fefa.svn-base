<script>
import Vue from 'vue';
import { mapState } from 'vuex';
import api from '../../common/http.js';
import uCharts from '@/components/u-charts/u-charts.js';
import SSwitch from '@/components/s-switch/s-switch.vue';
import common from '../../common/common.js';
import yyzx from '../../components/yyzx.vue';
import mdslect from '../../components/mdslect.vue';
var that;
var canvaLineA = null;
export default {
	components: {
		SSwitch,
		yyzx,
		mdslect
	},
	data() {
		return {
			name: uni.getStorageSync('Name'),
			imgUrl: uni.getStorageSync('avatarUrl'),
			switchType: 0,
			arr: [
				{
					key: 0,
					value: '周'
				},
				{
					key: 1,
					value: '月'
				}
			],
			month: '',
			switchTitle: '近七日业绩趋势图',
			cWidth: '',
			cHeight: '',
			pixelRatio: 1,
			checked: true,
			mdxz: false,
			Winheight: this.getWindowHeight(),
			itemList: this.$mdList,
			mdnum: 0,
			LineA: {},
			LineB: {}
		};
	},
	computed: {
		...mapState({
			num: state => state.num
		})
	},
	onShow() {
		this.getList();
		// common.checkTime(that);//判断登录是否过期
	},
	onLoad() {
		that = this;
		that.month = new Date().getNowFormatDate('yyyy-MM-dd').slice(5, 7);
		//#ifdef MP-ALIPAY
		uni.getSystemInfo({
			success: function(res) {
				if (res.pixelRatio > 1) {
					that.pixelRatio = 2;
				}
			}
		});
		//#endif
		this.cWidth = uni.upx2px(700);
		this.cHeight = uni.upx2px(500);
		let arr = [];
		that.$mdList.forEach(x => {
			if (x.select) {
				arr.push(x);
			}
		});
		that.mdnum = arr.length;
		that.$store.commit('changeNum', arr.length);
	},
	methods: {
		queding(data) {
			//门店选择确定事件
			this.mdxz = data.yinC;
			this.mdnum = data.num;
			Vue.prototype.$mdList = data.oldArr;
			Vue.prototype.$mdListData = data.newArr;
			Vue.prototype.$htData = data.htArr;
			this.getList();
		},
		resert(data) {
			this.mdxz = data.yinC;
		},
		// 切换switch
		getSwitchValue(e) {
			let zt = e.key;
			this.switchType = zt;
			if (zt == 1) {
				this.switchTitle = this.month + '月份业绩趋势图';
			} else {
				this.switchTitle = '近七日业绩趋势图';
			}
			this.getList();
		},
		getList() {
			let url = 'Manage/GetStoreAchieveNew';
			let data = {
				employeeId: uni.getStorageSync('employeeId'),
				DataType: this.switchType,
				storeIds: this.$htData == undefined ? null : this.$htData.join(',')
			};
			api.httpRequestGet(url, data).then(res => {
				if (res.data.error_code == 'Success') {
					this.getServerData(res.data.data); //打印请求返回的数据
				}
			});
		},
		getServerData(LineA) {
			let chartsData = LineA;
			that.showLineA('canvasLineA', chartsData.series, chartsData.categories);
		},
		showLineA(canvasId, series, categories) {
			canvaLineA = new uCharts({
				$this: that,
				canvasId: canvasId,
				type: 'line',
				colors: ['#6fb950'],
				fontSize: 11,
				padding: [15, 15, 0, 15],
				legend: {
					show: true,
					padding: 5,
					lineHeight: 11,
					margin: 5
				},
				dataLabel: false,
				dataPointShape: true,
				dataPointShapeType: 'hollow',
				background: '#FFFFFF',
				pixelRatio: that.pixelRatio,
				categories: categories,
				series: series,
				animation: false, //是否开启动画
				enableScroll: true, //开启图表拖拽功能
				xAxis: {
					disableGrid: false,
					type: 'grid',
					gridType: 'dash',
					itemCount: 4,
					scrollShow: true, //是否显示滚动条
					scrollAlign: 'left'
				},
				yAxis: {
					// disabled:true,
					gridType: 'dash',
					splitNumber: 8,
					min: 10,
					max: 180,
					format: val => {
						return val.toFixed(0);
					} //如不写此方法，Y轴刻度默认保留两位小数
				},
				width: that.cWidth * that.pixelRatio,
				height: that.cHeight * that.pixelRatio,
				extra: {
					line: {
						type: 'straight'
					}
				}
			});
		},
		touchLineA(e) {
			canvaLineA.scrollStart(e);
		},
		moveLineA(e) {
			canvaLineA.scroll(e);
		},
		touchEndLineA(e) {
			canvaLineA.scrollEnd(e);
			//下面是toolTip事件，如果滚动后不需要显示，可不填写
			canvaLineA.touchLegend(e);
			canvaLineA.showToolTip(e, {
				format: function(item, category) {
					return category + ' ' + item.name + ':' + item.data;
				}
			});
		},
		// 更新图表数据
		changeData() {
			let newdata = this.LineB;
			canvaLineA.updateData({
				series: newdata.series,
				categories: newdata.categories
			});
		}
	}
};
</script>

