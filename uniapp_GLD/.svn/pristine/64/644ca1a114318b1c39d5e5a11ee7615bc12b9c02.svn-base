	},
	onLoad(data) {
		this.hlsID = data.data;
		console.log(this.hlsID);
	},
	methods: {
		onClickItem(val) {
			//tab切换
			this.current = val.currentIndex;
		},
		scollSwiper(e) {
			//scoll卡片切换
			this.current = e.target.current;
			this.getList();
		},
		getList() {
			let url = 'Performance/GetNurse';
			let data = {
				employeeId: this.hlsID,
				current: this.current
			};
			uni.showLoading({
				title: '加载中'
			});
			api.httpRequestGet(url, data).then(res => {
				if (res.data.error_code == 'Success') {
					// console.log(res.data);
					uni.hideLoading();
				}
			});
		}
	}
};
