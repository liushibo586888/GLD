
page {
	width: 100%;
	height: 100%;
	background-color: #f4f7ff;
}
image {
	width: 100rpx;
	height: 100rpx;
	border-radius: 50rpx;
}
.box {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-top: 30rpx;
	background-color: #ffffff;
	padding: 30rpx 0;
}
.boxL {
	padding: 20rpx 0 0 50rpx;
	text-align: right;
	color: #919191;
}
.boxR {
	padding: 20rpx 0 0 30rpx;
}
.boxCont {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	background-color: #ffffff;
	padding: 20rpx 30rpx;
}
.boxRight {
	margin-left: 30rpx;
	margin-top: 15rpx;
}
.footBtn {
	position: absolute;
	left: 0;
	bottom: 0;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 100%;
}
button {
	width: 50%;
	border-radius: 0;
}
.jjly {
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	background-color: #6d6d6d;
	background: rgba(0, 0, 0, 0.5);
	padding: 20rpx;
}
.dhk {
	margin-top: 40%;
	width: 100%;
	height: 500rpx;
	border: 1px solid #6d6d72;
	padding: 20rpx;
	background-color: #ffffff;
}
textarea {
	width: 100%;
	height: 300rpx;
	border: 1px solid #6d6d72;
	padding: 20rpx;
	box-sizing: border-box;
}

